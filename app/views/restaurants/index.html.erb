<h1>Liste des Restaurants</h1>
<%= link_to 'Ajouter un restaurant', new_restaurant_path, class:'btn btn-success' %>
<div class="cards my-3">
  <% @restaurants.each do |restaurant|%>
    <div class="card rounded-0">
      <img src="https://i.pinimg.com/736x/1c/66/32/1c66322a9a811d91c14d0a4221b72166.jpg" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <p class="card-text">Address : <%= restaurant.address %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Call us : <%= restaurant.phone_number %></li>
        <li class="list-group-item">We're doing <%= restaurant.category %> cooking</li>
      </ul>
      <%= link_to 'Voir ce restaurant', restaurant_path(restaurant), class:'btn btn-secondary rounded-0 '%>
      <%= link_to 'Ajouter un avis', new_restaurant_review_path(restaurant), class:'btn btn-primary rounded-0' %>
      </li>
    </div>
  <% end %>
</div>
