<%= simple_form_for @restaurant, html: { class: "mt-4" } do |f| %>
  <%= f.input :name,
    label: "Name",
    label_html: { class: "form-label fw-semibold" },
    input_html: { class: "form-control" },
    wrapper_html: { class: "mb-3" } %>
    <%= f.input :address,
    label: "Address",
    label_html: { class: "form-label fw-semibold" },
    input_html: { class: "form-control" },
    wrapper_html: { class: "mb-3" } %>
    <%= f.input :category,
    label: "Category (chinese, italian, japanese, french, belgian)",
    label_html: { class: "form-label fw-semibold" },
    input_html: { class: "form-control" },
    wrapper_html: { class: "mb-3" } %>
    <%= f.input :phone_number,
    label: "Phone",
    label_html: { class: "form-label fw-semibold" },
    input_html: { class: "form-control" },
    wrapper_html: { class: "mb-3" } %>
  <%= f.button :submit, 'Add the Restaurant', class: 'btn btn-primary mt-3' %>
<% end %>
