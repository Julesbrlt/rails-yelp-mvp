<h1>Ajouter un avis</h1>
<%= simple_form_for [@restaurant, @review], html: { class: "mt-4" } do |f| %>
  <%= f.input :content,
    label: "content",
    label_html: { class: "form-label fw-semibold" },
    input_html: { class: "form-control" },
    wrapper_html: { class: "mb-3" } %>
    <%= f.input :rating,
    label: "rating (0 to 5)",
    label_html: { class: "form-label fw-semibold" },
    input_html: { class: "form-control" },
    wrapper_html: { class: "mb-3" } %>
  <%= f.button :submit, 'Ajouter un avis', class: 'btn btn-primary mt-3' %>
<% end %>
